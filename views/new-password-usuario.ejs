<% - include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/login.css">

    </head>

    <body>
        <%- include('includes/navigation.ejs') %>

            <main>
                <% if (mensajeError) { %>
                    <div class="user-message user-message--error">
                        <%= mensajeError %>
                    </div>
                    <% } %>
                        <div class="box-center_flex">
                            <form class="container" action="/usuario/new-password" method="POST">
                                <div class="datos">
                                    <legend class="legend">
                                        <div>Nueva contraseña</div>
                                    </legend>
                                    <div>
                                        <label>Contraseña <span class="asterisco">*</span></label>
                                        <input class="inputText" type="password" name="password">
                                    </div>
                                    <div>
                                        <input type="hidden" name="idUsuario" value="<%= idUsuario %>">
                                        <input type="hidden" name="tokenPassword" value="<%= tokenPassword %>">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <button type="submit" class="btn-samsung">
                                            <span>Actualizar contraseña</span>
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>

            </main>
            <%- include('includes/end.ejs') %>
    </body>